{
    "name": "bmc-tpl",
    "displayName": "BMC-tpl",
    "description": "BMC TPL (language) Support",
    "version": "0.1.0",
    "publisher": "trianglesis",
    "author": {
        "name": "trianglesis"
    },
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets",
        "Themes"
    ],
    "contributes": {
        "themes": [
            {
                "label": "BMC Monokai",
                "uiTheme": "vs-dark",
                "path": "./themes/BMC Monokai-color-theme.json"
            }
        ],
        "languages": [
            {
                "id": "tpl",
                "aliases": [
                    "tpl"
                ],
                "extensions": [
                    ".tpl"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "tplpre",
                "aliases": [
                    "tplpre"
                ],
                "extensions": [
                    ".tplpre"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "model",
                "aliases": [
                    "model"
                ],
                "extensions": [
                    ".model"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "tpl",
                "scopeName": "source.tpl",
                "path": "./syntaxes/tplpre.tmLanguage.json"
            },
            {
                "language": "tplpre",
                "scopeName": "source.tplpre",
                "path": "./syntaxes/tplpre.tmLanguage.json"
            },
            {
                "language": "model",
                "scopeName": "source.model",
                "path": "./syntaxes/model.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "tplpre",
                "path": "./snippets/tpl.json"
            },
            {
                "language": "tpl",
                "path": "./snippets/tpl.json"
            }
        ],
        "configuration": {
            "title": "BMC Tpl IDE",
            "properties": {
                "tplpre.PathToIDE": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to TPL IDE Engine"
                },
                "tplpre.PathToPatterns": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to PATTERNS_PATH"
                },
                "tplpre.TknCore": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to TKN_CORE"
                },
                "tplpre.PythonPath": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to PYTHONPATH"
                },
                "tplpre.TaxonomyPath": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to TAXONOMY_PATH"
                },
                "tplpre.TidewayPath": {
                    "type": "string",
                    "default": false,
                    "description": "Paste here full path to TIDEWAY"
                },
                "tplpre.dummy": {
                    "type": [
                        "string",
                        "null"
                    ],
                    "default": null,
                    "description": "Test test test"
                }
            }
        }
    },
    "devDependencies": {
        "js-yaml": "^4.1.0"
    },
    "homepage": "https://github.com/trianglesis/bmc-tpl",
    "repository": {
        "type": "git",
        "url": "https://github.com/trianglesis/bmc-tpl.git"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/trianglesis/bmc-tpl/issues"
    }
}
