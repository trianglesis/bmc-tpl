    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "TPL: Compile current",
            "type": "python",
            "request": "launch",
            // "program": "${workspaceFolder}/.vscode/ide_compiler.py",
            "program": "${workspaceFolder}\\ide_compiler.py",
            "args": [
                "-q",
                "-cce",
                "-cf", "${file}",
                // "-cp", "F:\\TUTFramework\\tku_patterns", 
                // "-ct", "F:\\TUTFramework\\code\\data\\installed\\taxonomy\\00taxonomy.xml"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "TPL: Preprocess current",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\ide_compiler.py",
            "args": [
                "-cpe",
                "-cf", "${file}",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "TPL: Investigate target",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\ide_compiler.py",
            "args": [
                "-q",
                "-run",
                "-tg", "${selectedText}",
                "-cf", "${file}",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "TPL: Find target",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\ide_compiler.py",
            "args": [
                "-q",
                "-find",
                "-tg", "${selectedText}",
                "-cf", "${file}",
            ],
            "console": "integratedTerminal"
        },        
